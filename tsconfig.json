{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "types": ["node"],
    "sourceMap": true,
    "target": "es2017",
    "lib": ["es2017"]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
